---

interface Props {
  title: string
  company: string
  descriptions: string []
  descriptionTitle: string
  date: string
  tech_tags: {
    name: string
    class: string
    icon: (_props: Record<string, any>) => any
  }[]
}

const { title, company, descriptions, date, tech_tags = [], descriptionTitle } = Astro.props
---

<div
  class="relative mx-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4] pb-10"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
      <ul class="flex gap-y-2 gap-x-1 mt-4 ml-2 flex-wrap">
        {
          tech_tags.map((tag) => (
          <li>
              <span
                class={`flex gap-x-2 rounded-full w-fit text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))
        }

      </ul>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    <h3 class="text-md font-bold text-gray-800 dark:text-white">{descriptionTitle}</h3>
    {descriptions.map(description => (
      <div class="leading-[1.6]">
        {description}
      </div>
    ))}
  </div>
</div>
